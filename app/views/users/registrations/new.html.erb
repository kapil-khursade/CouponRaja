<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white rounded-xl shadow-md">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Sign up</h1>

    <div class="flex items-center justify-center">
    <image height="100" width="100"  src="https://i.ibb.co/XZc1VhLH/Coupon-Raja.png" alt="Coupon-Raja" />
    </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>


  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700"  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "w-full bg-sky-500 hover:bg-sky-700 text-white font-medium py-2 px-4 rounded-lg transition"  %>
  </div>
<% end %>

<%= render "users/shared/links" %>

  </div>
</div>
