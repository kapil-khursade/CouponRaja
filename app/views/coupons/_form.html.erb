<div class="flex items-center justify-center">
  <div class="w-full max-w-md p-6 bg-white rounded-xl shadow-md">
<%= form_with(model: coupon, class: "contents", html: {class: "space-y-4" }) do |f| %>
  <% if coupon.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(busine.errors.count, "error") %> prohibited this coupon from being created:</h2>

      <ul class="list-disc ml-6">
        <% coupon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :busine_id, "Select Business", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :busine_id, businesses, :id, :trade_name, { prompt: "Choose a Business" }, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div>
    <%= f.label :coupon_type, "Type", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :coupon_type, Coupon.coupon_types.keys.map { |type| [type.humanize, type] }, { prompt: "Choose a Coupon Type" }, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div>
    <%= f.label :type, "Value", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :value, required: true, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div>
    <%= f.label :type, "Quantity", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :quantity, required: true, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>

  <div>
    <%= f.label :valid_up_to, "Valid Up To", class: "block text-sm font-medium text-gray-700" %>
    <%= f.datetime_local_field :valid_up_to, required: true, class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring-sky-500 focus:border-sky-500" %>
  </div>


  <div>
    <%= f.submit "Create New Coupon", class: "w-full bg-sky-500 cursor-pointer hover:bg-sky-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
  </div>
<% end %>
  </div>
</div>
