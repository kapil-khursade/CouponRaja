<% content_title ||= nil %>
<% title ||= "Default Title" %>
<% button_text ||= "Click Here" %>
<% button_path ||= root_path %>
<% content_for :title,  content_title %>
<div class="flex justify-between items-center mb-6">
    <h2 class="text-4xl font-extrabold dark:text-white"><%= title %></h2>
    <%= link_to button_text, button_path, class: "text-center bg-gray-500 hover:bg-sky-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
</div>
