  <%= render "layouts/top", content_title: "Business", title: "Business", button_text: "Add New Business", button_path: new_busine_path%>

  <div id="busines" class="min-w-full">
    <% if @busines.any? %>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    GSTIN
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
          <% @busines.each do |busine| %>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= busine.gstin %>
                </th>
                <td class="px-6 py-4">
                    <span class="py-2 px-3
                      <%= case busine.valid_check_status
                          when 'not_validated' then 'bg-gray-800'
                          when 'validating' then 'bg-blue-400'
                          when 'valid_gstin' then 'bg-green-500'
                          when 'validation_failed' then 'bg-red-500'
                          end %> text-white font-medium rounded-md inline-block">
                      <%= busine.valid_check_status.humanize %>
                    </span>
                </td>
                <td class="px-6 py-4">
                    <%= link_to "Show", busine_path(busine.id), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                </td>
            </tr>
          <% end %>
        </tbody>

    </table>
    </div>
    <% else %>
      <p class="text-center my-10 dark:text-white">No busines found.</p>
    <% end %>
  </div>

